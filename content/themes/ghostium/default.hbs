    <link rel="stylesheet" href="{{asset 'css/b3a55bb9.main.min.css'}}"/>
    <link rel="stylesheet" href="{{asset 'css/py.css'}}"/>
    <script src="{{asset 'js/8fe6056b.head-scripts.min.js'}}"></script>

    {{ghost_head}}
  </head>
  <body class="{{body_class}}">

    {{> drawer this}}

    <div class="drawer-overlay"></div>
    <main id="container" role="main" class="container">
      <div class="surface">
        <div class="surface-container">
          <div data-pjax-container class="content">
            {{{body}}}
          </div>
        </div>
      </div>
    </main>

    {{ghost_foot}}

    <script src="{{asset 'js/56c2364f.foot-scripts.min.js'}}"></script>
    <script src="{{asset 'js/py.js'}}"></script>
    <script type="text/javascript">
      {{> custom/config}}

      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
